{
  "name": "slot-root",
  "private": true,
  "scripts": {
    "test": "tsx tests/runTests.ts",
    "sim": "tsx sim/runSim.ts --config ./sim/workerConfig.template.ts",
    "sim:fast": "tsx sim/runSim.ts --config ./sim/workerConfig.template.ts --spins 1000000 --bet 1",
    "sim:deep": "tsx sim/runSim.ts --config ./sim/workerConfig.template.ts --spins 20000000 --bet 1",
    "sim:batch": "tsx sim/runBatchSim.ts --config ./sim/workerConfig.template.ts --spins 1000000 --batches 5 --bet 1",
